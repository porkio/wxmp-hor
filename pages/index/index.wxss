/**index.wxss**/
.cards-wrapper {
  padding: 10rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.card {
  display: flex;
  flex-direction: column;
  width: 94%;
  margin: 12rpx auto;
  border-radius: 18rpx;
  background-color: #fff;
  overflow: hidden;
}

.card .card-img {
  position: relative;
}

.card .card-img image {
  display: block;
  width: 100%;
  height: 800rpx;
}

.card .card-img .is-auth {
  display: flex;
  padding: 14rpx 30rpx;
  color: #fff;
  font-size: 28rpx;
  position: absolute;
  left: 32rpx;
  bottom: 38rpx;
  border-radius: 99rpx;
  background-color: rgba(41, 41, 41, .34);
}

.card .card-img .is-auth image {
  width: 32rpx;
  height: 40rpx;
  margin-right: 16rpx;
}

.line-group {
  display: flex;
  padding: 18rpx 0;
  align-items: center;
}

.card .card-info {
  padding: 44rpx 32rpx;
  position: relative;
}

.info-text {
  padding-right: 48rpx;
  color: #444;
}

.info-position {
  padding-right: 18rpx;
}

.icon-position {
  margin-right: 20rpx;
}

.icon-wechat {
  margin-right: 20rpx;
}



