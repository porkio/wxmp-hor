@import '/utils/iconfont.wxss';
/**app.wxss**/
page {
  background: #F4F5F9;
}

view {
  box-sizing: border-box;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  background: #F4F5F9;
  min-height: 100vh;
}

.content {
  padding: 20rpx 0;
  width: 100%;
}

.bg-primary {
  background-color: #F4F5F9;
}

.bg-white {
  background-color: #fff;
}

.btn {
  background: none;
}

.btn-bottom-right {
  width: 212rpx;
  height: 88rpx;
  line-height: 88rpx !important;
  background: #11C6D2;
  color: #fff;
  font-size: 36rpx;
  border-top-left-radius: 18rpx;
  border-bottom-right-radius: 18rpx;
  text-align: center;
  font-weight: 400;
  position: absolute;
  right: 0;
  bottom: 0;
}

.btn-normal {
  display: block;
  margin: 0;
  padding: 0;
  line-height: normal;
  background: none;
  border-radius: 0;
  box-shadow: none;
  border: none;
  font-size: unset;
  text-align: center;
  overflow: visible;
  color: inherit;
}

.btn-primary {
  padding: 0;
  height: 88rpx;
  line-height: 88rpx;
  background: #11C6D2;
  color: #fff;
  font-size: 32rpx;
  border-radius: 99rpx;
  text-align: center;
  font-weight: 400;
}

.btn-cancel {
  padding: 0;
  height: 88rpx;
  line-height: 88rpx;
  background: #dfdfdf;
  color: #fff;
  font-size: 32rpx;
  border-radius: 99rpx;
  text-align: center;
  font-weight: 400;
}

.layer {
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  justify-content: center;
  width: 100%;
  height: 100%;
  background-color: #fff;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999;
}

/* flex 布局 */
.dis-flex {
  display: flex;
}

.j-c-center {
  justify-content: center;
}

.j-c-sb {
  justify-content: space-between;
}

.flex-d-column {
  flex-direction: column;
}

.flex-wrap {
  flex-wrap: wrap;
}

.flex-nowrap {
  flex-wrap: nowrap;
}

.align-i-center {
  align-items: center;
}

.shadow-primary {
  box-shadow: 0 1px 1px 0 rgba(41, 41, 41, .08);
}

