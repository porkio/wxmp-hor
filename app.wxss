.title-2 {
  font-size: 44rpx;
  color: #333;
  font-weight: 600;
  padding: 18rpx 0 18rpx 48rpx;
  position: relative;
}

.title-2::before {
  display: block;
  content: ' ';
  position: absolute;
  left: 26rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 36rpx;
  border-radius: 8rpx;
  background-color: #39e8b5;
}



